<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/berb"

    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="299dp"
        android:layout_marginTop="295dp"
        android:layout_marginBottom="250dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="189dp"
            android:layout_height="238dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.636">

            <Button
                android:id="@+id/randevu"
                android:layout_width="142dp"
                android:layout_height="96dp"
                android:layout_marginStart="35dp"
                android:backgroundTint="@color/berbermoru"
                android:foreground="@drawable/randevu"
                android:text="Button"
                android:onClick="randevu"
                />

            <Button
                android:id="@+id/konum"
                android:layout_width="142dp"
                android:layout_height="96dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/berbermoru"
                android:foreground="@drawable/konum"
                android:onClick="konum"
                android:text="Button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="411dp"
            android:layout_height="238dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.636">


            <Button
                android:id="@+id/ara"
                android:layout_width="142dp"
                android:layout_height="96dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="0dp"
                android:backgroundTint="@color/berbermoru"
                android:foreground="@drawable/ara"
                android:onClick="ara"
                android:text="Button" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>